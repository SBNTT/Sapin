{
    "name": "sapin/engine",
    "version": "0.1.0",
    "require": {
        "php": ">=8.1",
        "ext-dom": "*",
        "nette/php-generator": "^4.1",
        "nikic/php-parser": "^5.0",
        "masterminds/html5": "^2.9"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.11",
        "friendsofphp/php-cs-fixer": "^3.57",
        "phpunit/phpunit": "^10.5",
        "dg/bypass-finals": "^1.7"
    },
    "autoload": {
        "psr-4": {
            "Sapin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sapin\\Test\\Helper\\": "tests/helper/",
            "Sapin\\Test\\Unit\\": "tests/unit/",
            "Sapin\\Test\\Integration\\": "tests/integration/"
        }
    },
    "scripts": {
        "lint": [
            "php -d memory_limit=-1 vendor/bin/phpstan analyze"
        ],
        "format": [
            "php -d memory_limit=-1 vendor/bin/php-cs-fixer fix src",
            "php -d memory_limit=-1 vendor/bin/php-cs-fixer fix tests"
        ],
        "test": [
            "./vendor/bin/phpunit tests"
        ]
    }
}
