{
    "name": "sapin/examples-todos-vanilla",
    "repositories": [
        {
            "type": "path",
            "url": "../../engine"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-sqlite3": "*",
        "sapin/engine": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.57"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "format": [
            "php -d memory_limit=-1 vendor/bin/php-cs-fixer fix src"
        ]
    }
}
